generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model NotablePerson {
  id          String   @id @default(uuid())
  name        String
  wikidata_url String   @unique
  occupation String
  image_url  String?
  created_at  DateTime @default(now())
}
